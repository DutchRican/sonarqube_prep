{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "es2022"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "lib/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@logic/*": [
        "lib/logic/*"
      ],
      "@models/*": [
        "lib/models/*"
      ],
      "@constants": [
        "lib/constants"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "build",
    "rootDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "types": [
      "node"
    ],
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}